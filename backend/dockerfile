# Build Stage
FROM node:24-slim AS builder
WORKDIR /app
COPY package.json pnpm-lock.yaml ./
RUN npm install -g pnpm && pnpm install
COPY . .
RUN pnpm build

# Run Stage
FROM node:24-slim
WORKDIR /app

# Install dependencies for yt-dlp impersonation
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 \
    python3-pip \
    python3-certifi \
    python3-full \
    wget \
    ca-certificates \
    && wget https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -O /usr/local/bin/yt-dlp \
    && chmod a+rx /usr/local/bin/yt-dlp \
    # Create a virtual environment for python packages to avoid PEP 668 issues
    && python3 -m venv /opt/venv \
    && /opt/venv/bin/pip install --no-cache-dir brotli \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Add venv to PATH so yt-dlp can find brotli
ENV PATH="/opt/venv/bin:$PATH"

COPY --from=builder /app/dist ./dist
COPY --from=builder /app/package.json ./package.json
COPY --from=builder /app/node_modules ./node_modules

EXPOSE 3001
CMD ["node", "dist/index.js"]